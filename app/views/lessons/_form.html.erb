<%# render partial: 'layouts/errors', locals: { model: @lesson } %>

<%= form_for @lesson do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.hidden_field :teacher_id, value: @teacher.id %>
  <%= f.submit %>
<% end %>