



<%= link_to 'Drop Lesson', lesson_drop_path(@lesson), method: :delete, class: "ui fluid teal button" if is_enrolled? %>


<div class="ui piled text container segment">
  <div> 
    <div class="ui header">
      <%= @lesson.title %>
    </div>
    <div class="date">Where: <%= @lesson.location %></div>
    <div class="date">When: <%= @lesson.when %></div>
    <div class="description">
      What: <%= @lesson.description %>
    </div>
    <div>Who: <%= @lesson.teacher.full_name  %></div>
  </div>

  <% unless is_enrolled? || is_teacher? %>
    <div class="ui labeled button">
      <div class="ui basic teal button">
        <i class="group icon"></i>
        <%= link_to 'Enroll', lesson_enrollment_path(@lesson), method: :post %>
      </div>
      <a class="ui teal left pointing label">
        1,048 <%#Number of students goes here%>
      </a>
    </div>
  <% end %>

  
  <%= link_to 'Edit Lesson', edit_teacher_lesson_path(@lesson.teacher, @lesson), class: "ui teal button" if is_lesson_owner? %>
</div>