<% if object.errors.any? %>
  <div>
    <strong>
      <% if object.errors.count > 1 %>
        <%= pluralize(object.errors.count, 'error') %> were found
      <% else %>
        <%= pluralize(object.errors.count, 'error') %> was found
      <% end %>
    </strong>

    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>