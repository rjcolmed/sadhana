
<h1 class="heading"><%= @teacher.full_name %></h1>
  <div class="ui justified text container"> 
  
    <div class="image show">
      <img src=<%= @teacher.image %>>
    </div>
    <h2 class="header">About <%= @teacher.first_name %></h2>
    <p>
      <%= @teacher.bio %>
    </p>
      <% if is_logged_in? && owns_show_page? %>
        <div class="three ui fluid buttons">
          <%= link_to 'New Lesson', new_teacher_lesson_path(@teacher), class: 'ui big green button' %>
          <%= link_to 'View Your Lessons', teacher_lessons_path(@teacher), class: 'ui big blue button', data: { id: @teacher.id } %>
          <%= link_to 'Edit Your Info', edit_teacher_path(@teacher), class: 'ui big button' %>
        </div>
        <div id="lessonInfo"></div>
      <% end %>
      <% if is_logged_in? && is_student? %>
        <div class="ui form">
          <%= form_for @review, html: { id: 'reviewForm' } do |f| %>
          <div class="field">
            <%= f.text_area :body, rows: "5", class: "ui field"%>
            <%= f.hidden_field :teacher_id, value: @teacher.id %>
            <%= f.hidden_field :student_id, value: @current_user.id %>
          </div>
            <%= f.submit 'Review', class: "ui fluid teal button" %>
          <% end %>
        <div>
      <% end %>
  </div>


<a href="#" class="js-lessons" data-id="<%= @teacher.id %>">Lessons</a>




